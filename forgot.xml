<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/listviewbackground"
    tools:context=".Forgot" >

    <TextView
        android:id="@+id/enterText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="Type To Get Your Password"
        android:textColor="#000000"
        android:textSize="25sp" />

    <EditText
        android:id="@+id/getPhone"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/enterText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/edittext"
        android:hint="Enter Number" />

    <TextView
        android:id="@+id/disPlay"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/get_display"
        android:layout_below="@+id/getPhone"
        android:layout_marginTop="35dp"
        android:textColor="#000000"
        android:textSize="25sp"
        android:textStyle="bold|italic" />

    <Button
        android:id="@+id/get_display"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/getPhone"
        android:layout_below="@+id/disPlay"
        android:layout_marginTop="53dp"
        android:background="@drawable/listviewbackground"
        android:divider="@drawable/divider"
        android:text="Get Your Password" />

</RelativeLayout>