<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/listviewbackground"
    tools:context=".C_Notes" >

    <TextView
        android:id="@+id/relative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/listviewbackground"
        android:paddingLeft="10dp"
        android:text="Operating System Notes"
        android:textColor="#000000"
        android:textSize="25sp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/relative" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/listviewbackground"
            android:orientation="vertical"
            android:paddingLeft="5dp"
            android:paddingRight="5dp" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/listviewbackground"
                android:divider="@drawable/divider"
                android:text="Operating-system-level virtualization is a server-virtualization method where the kernel of an operating system allows for multiple isolated user-space instances, instead of just one. Such instances (sometimes called containers, software containers,"
                android:textColor="#000000"
                android:textSize="20sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="5dip"
                android:layout_marginTop="7dp"
                android:background="@drawable/listviewbackground"
                android:divider="@drawable/divider"
                android:listSelector="@drawable/sha" >
            </View>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/listviewbackground"
                android:divider="@drawable/divider"
                android:text="Operating-system-level virtualization is commonly used in virtual hosting environments, where it is useful for securely allocating finite hardware resources amongst a large number of mutually-distrusting users."
                android:textColor="#000000"
                android:textSize="20sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="5dip"
                android:layout_marginTop="7dp"
                android:background="@drawable/listviewbackground"
                android:divider="@drawable/divider"
                android:listSelector="@drawable/sha" >
            </View>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/listviewbackground"
                android:divider="@drawable/divider"
                android:text="System administrators may also use it, to a lesser extent, for consolidating server hardware by moving services on separate hosts into containers on the one server."
                android:textColor="#000000"
                android:textSize="20sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="5dip"
                android:layout_marginTop="7dp"
                android:background="@drawable/listviewbackground"
                android:divider="@drawable/divider"
                android:listSelector="@drawable/sha" >
            </View>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/listviewbackground"
                android:divider="@drawable/divider"
                android:text="Operating-system-level virtualization is not as flexible as other virtualization approaches since it cannot host a guest operating system different from the host one, or a different guest kernel. For example, with Linux, different distributions are fine, but other operating systems such as Windows cannot be hosted."
                android:textColor="#000000"
                android:textSize="20sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="5dip"
                android:layout_marginTop="7dp"
                android:background="@drawable/listviewbackground"
                android:divider="@drawable/divider"
                android:listSelector="@drawable/sha" >
            </View>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/listviewbackground"
                android:divider="@drawable/divider"
                android:text="Computer operating systems (OSes) provide a set of functions needed and used by most application programs on a computer, and the links needed to control and synchronize computer hardware."
                android:textColor="#000000"
                android:textSize="20sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="5dip"
                android:layout_marginTop="7dp"
                android:background="@drawable/listviewbackground"
                android:divider="@drawable/divider"
                android:listSelector="@drawable/sha" >
            </View>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/listviewbackground"
                android:divider="@drawable/divider"
                android:text="Since virtually all video game consoles and arcade cabinets designed and built after 1980 were true digital machines (unlike the analog Pong clones and derivatives), some of them carried a minimal form of BIOS or built-in game, such as the ColecoVision, the Sega Master System and the SNK Neo Geo."
                android:textColor="#000000"
                android:textSize="20sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="5dip"
                android:layout_marginTop="7dp"
                android:background="@drawable/listviewbackground"
                android:divider="@drawable/divider"
                android:listSelector="@drawable/sha" >
            </View>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/listviewbackground"
                android:divider="@drawable/divider"
                android:text="Some operating-system-level virtualization implementations provide file-level copy-on-write (CoW) mechanisms. (Most commonly, a standard file system is shared between partitions, and those partitions that change the files automatically create their own copies.)"
                android:textColor="#000000"
                android:textSize="20sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="5dip"
                android:layout_marginTop="7dp"
                android:background="@drawable/listviewbackground"
                android:divider="@drawable/divider"
                android:listSelector="@drawable/sha" >
            </View>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/listviewbackground"
                android:divider="@drawable/divider"
                android:text="Operating-system-level virtualization is not as flexible as other virtualization approaches since it cannot host a guest operating system different from the host one, or a different guest kernel. For example, with Linux, different distributions are fine, but other operating systems such as Windows cannot be hosted."
                android:textColor="#000000"
                android:textSize="20sp" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>